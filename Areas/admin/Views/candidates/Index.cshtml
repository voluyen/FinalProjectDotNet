@model IEnumerable<FinalProjectDotNet.Models.CandidatesView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}


<div class="table-container">
        <div class="create-button">
            @Html.ActionLink("Create New", "Create", null, new { @class = "create-link" })
        </div>
        <table id="example1" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Hình đại diện
                    </th>
                    <th>
                        Họ và tên
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Ngày Sinh
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Resume
                    </th>
                    <th>
                        Kỹ năng
                    </th>
                    <th>
                        Kinh nghiệm
                    </th>
                    <th>
                        Ngày đăng ký
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.avt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.full_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.birthdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.resume)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.skills)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.experience)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_create)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-edit" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-details" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-delete" })
                    </td>
                </tr>
                }
            </tbody>


        </table>
</div>


