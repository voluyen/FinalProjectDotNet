@model IEnumerable<FinalProjectDotNet.Models.EF.Candidate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}


<div class="table-container">
    <div class="create-button">
        @Html.ActionLink("Create New", "Create", null, new { @class = "create-link" })
    </div>
    <table class="table" border="1">
        <tr>
            <th>
                Hình đại diện
            </th>
            <th>
                Họ và tên
            </th>
            <th>
                Email 
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Resume
            </th>
            <th>
                Kỹ năng
            </th>
            <th>
                Kinh nghiệm
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.avt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.resume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.skills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.experience)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-edit" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-details" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-delete" })
                </td>
            </tr>
        }

    </table>
</div>


