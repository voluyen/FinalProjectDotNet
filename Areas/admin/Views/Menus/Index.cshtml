@model IEnumerable<FinalProjectDotNet.Models.EF.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div class="table-container">
    <div class="create-button">
        @Html.ActionLink("Create New", "Create", null, new { @class = "create-link" })
    </div>
    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên Menu
            </th>
            <th>
                Link
            </th>
            <th>
                Meta
            </th>
            <th>
                Hide
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order)
            </th>
            <th>
                Date begin
            </th>
            <th></th>
        </tr>
        @{ var cnt = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(cnt ++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.meta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datebegin)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
    </div>