@model FinalProjectDotNet.Models.EF.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngành
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.name)
        </dd>

        <dt>
            Nhà tuyển dụng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Recruiter.full_name)
        </dd>

        <dt>
