@model FinalProjectDotNet.Models.EF.Job

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Job</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngành
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.name)
        </dd>

        <dt>
            Địa điểm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VietnamProvince.ProvinceName)
        </dd>

        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            Mô tả công việc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            Yêu cầu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.requirements)
        </dd>

        <dt>
            Mức lương
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salary)
        </dd>

        <dt>
            Ngày đăng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_posted)
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @(Model.is_active ? "Đang tuyển dụng" : "Hết hạn")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "GetJob")
        </div>
    }
</div>

