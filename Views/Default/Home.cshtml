@section scripts{
  

    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/admi lte.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#submit').on('click', function () {
                var category = $('.category').val();
                var location = $('.location').val();
                var search = $('#name').val(); 
                    window.location.href = '/Default/Jobs?id=' + category + '&&id_location=' + location + '&&search=' + search;
                
            });

        });
    </script>
    }

