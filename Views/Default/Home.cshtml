<!--/search_form -->
<div id="search_form" class="search_top">
    <h2>Start your job search</h2>
    <div>
        <input id="name" type="text" name="Enter Keyword(s)" placeholder="Enter Keyword(s)" required="">
        <select id="country12" class="frm-field required location">
            <option value=" ">All</option>
            @foreach (var i in ViewBag.location)
            {
                <option value="@i.ProvinceID">@i.ProvinceName</option>
            }

        </select>
        <select id="country12" class="frm-field required category">
            <option value=" ">All</option>
            @foreach (var i in ViewBag.category)
            {
                <option value="@i.id">@i.name</option>
            }

        </select>

        <input id="submit" type="submit" value="Find Jobs">
        <div class="clearfix"></div>
    </div>
       
</div>
